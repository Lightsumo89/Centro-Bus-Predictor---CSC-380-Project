create table Stop(stop_id int(5), stop_name varchar(50), primary key(stop_id));

create table Route(route_id int(5), route_name varchar(35), primary key(route_id));

//RouteStops documents what stops are part of what route

create table RouteStops(route_id int(5), stop_id int(5), primary key(route_id, stop_id), foreign key(route_id) references Route(route_id), foreign key(stop_id) references Stop(stop_id));

create table Bus(vehicle_id int(5), pattern_id int(5), route_id int(5), primary key(vehicle_id), foreign key(route_id) references Route(route_id)); 

//arrival data w auto increment pk

create table HistoricArrivals(delay_id int auto_increment, stop_id int(5) not null, route_id int(5) not null, route_dir varchar(20) not null, arrival_time time(0) not null, arrival_date date, primary key(delay_id), foreign key(stop_id) references Stop(stop_id), foreign key(route_id) references Route(route_id));

//making things searchable

create index stop on HistoricArrivals(stop_id);
create index route on HistoricArrivals(route_id);
create index direction on HistoricArrivals(route_dir);
